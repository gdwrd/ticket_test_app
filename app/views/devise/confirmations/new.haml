.common-container
  .col-xs-12.col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heaing
        %h4 Resend confirmation instructions
      .panel-body
        = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
          = devise_error_messages!
          .field.form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, class: 'form-control', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
          .actions.form-group
            = f.submit "Resend confirmation instructions", class: 'btn btn-info'
      .panel-footer
        = render "devise/shared/links"